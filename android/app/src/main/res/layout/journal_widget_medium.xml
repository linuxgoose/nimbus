<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/journal_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_soft"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Header: Location & Current Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/journal_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location"
            android:textSize="13sp"
            android:textColor="#2D3436"
            android:letterSpacing="0.02"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/journal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="11sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Current Weather -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/journal_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="14dp"
            android:scaleType="fitCenter"
            android:contentDescription="weather icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/journal_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72Â°"
                android:textSize="36sp"
                android:textColor="#2D3436"
                android:letterSpacing="-0.02"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/journal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partly cloudy"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:paddingTop="2dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <TextView
            android:id="@+id/journal_precip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Conditions Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/journal_wind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="11sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/journal_humidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="11sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/journal_feels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="11sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"
        android:layout_marginBottom="10dp" />

    <!-- 3-Hour Forecast -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/journal_hour_time_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#64748B"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/journal_hour_icon_0"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:contentDescription="icon" />

            <TextView
                android:id="@+id/journal_hour_temp_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#2D3436"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/journal_hour_precip_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#94A3B8"
                android:paddingTop="2dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/journal_hour_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#64748B"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/journal_hour_icon_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:contentDescription="icon" />

            <TextView
                android:id="@+id/journal_hour_temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#2D3436"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/journal_hour_precip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#94A3B8"
                android:paddingTop="2dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/journal_hour_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#64748B"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/journal_hour_icon_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:contentDescription="icon" />

            <TextView
                android:id="@+id/journal_hour_temp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#2D3436"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/journal_hour_precip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#94A3B8"
                android:paddingTop="2dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>

    <!-- Hidden fields for compatibility -->
    <TextView android:id="@+id/journal_date" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/journal_summary" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
</LinearLayout>
