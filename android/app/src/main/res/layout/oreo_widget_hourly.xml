                android:layout_weight="1"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:contentDescription="icon" />
            <TextView
                android:id="@+id/hourly_temp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/hourly_wind_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#000000" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/hourly_time_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000" />
            <ImageView
                android:id="@+id/hourly_icon_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:contentDescription="icon" />
            <TextView
                android:id="@+id/hourly_temp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/hourly_wind_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#000000" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/hourly_time_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000" />
            <ImageView
                android:id="@+id/hourly_icon_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
