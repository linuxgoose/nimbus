<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/journal_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_soft"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Header: Location, Summary, Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/journal_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="#2D3436"
                android:letterSpacing="0.02"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/journal_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calm and clear"
                android:textSize="11sp"
                android:textColor="#64748B"
                android:paddingTop="1dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <TextView
            android:id="@+id/journal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="11sp"
            android:textColor="#94A3B8"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Current Weather -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/journal_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="14dp"
            android:scaleType="fitCenter"
            android:contentDescription="weather icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/journal_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72Â°"
                android:textSize="38sp"
                android:textColor="#2D3436"
                android:letterSpacing="-0.02"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/journal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partly cloudy"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:paddingTop="2dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <TextView
            android:id="@+id/journal_precip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Conditions Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/journal_wind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="11sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/journal_humidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="11sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/journal_feels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="11sp"
            android:textColor="#64748B"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"
        android:layout_marginBottom="8dp" />

    <!-- 3-Day Forecast -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/journal_day_date_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#2D3436"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/journal_day_icon_0"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter"
                android:contentDescription="day icon" />

            <TextView
                android:id="@+id/journal_day_temp_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:textSize="12sp"
                android:textColor="#2D3436"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/journal_day_precip_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#94A3B8"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/journal_day_date_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#2D3436"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/journal_day_icon_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter"
                android:contentDescription="day icon" />

            <TextView
                android:id="@+id/journal_day_temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:textSize="12sp"
                android:textColor="#2D3436"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/journal_day_precip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#94A3B8"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/journal_day_date_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#2D3436"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/journal_day_icon_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter"
                android:contentDescription="day icon" />

            <TextView
                android:id="@+id/journal_day_temp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:textSize="12sp"
                android:textColor="#2D3436"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/journal_day_precip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#94A3B8"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>

    <!-- Hidden fields for compatibility -->
    <TextView android:id="@+id/journal_date" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/journal_uv" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
</LinearLayout>
