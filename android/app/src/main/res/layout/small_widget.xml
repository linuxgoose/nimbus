<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget_small_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000000"
              android:orientation="vertical"
              android:padding="8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/small_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
            
            <TextView
                android:id="@+id/small_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 Jan"
                android:textSize="10sp"
                android:textColor="#AAAAAA" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/small_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="9sp"
            android:textColor="#AAAAAA"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/small_weather_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="6dp"
            android:scaleType="fitCenter"
            android:contentDescription="weather icon" />
        
        <TextView
            android:id="@+id/small_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="6dp" />
        
        <TextView
            android:id="@+id/small_precipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#0066CC"
            android:layout_marginEnd="6dp" />
        
        <TextView
            android:id="@+id/small_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:textColor="#AAAAAA"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>
